</head>

<body>
    <%- include("partials/header") %>
    <div class="container">
        <h1>Compose</h1>
        <form action="/composePost" method="post">
            <div class="article title">
                <span class="article articleTitle text">Title</span>
                <input class="form-control article articleTitle box" type="text" name="articleTitle" autofocus>
            </div>
            <div class="article content">
                <span class="article articleContent text">Content</span>
                <textarea class="form-control  article articleContent box" type="text" name="articleContent"></textarea>
            </div>
            <button class="btn btn-primary submitButton" type="submit" name="composeButton">Publish</button>
        </form>
    </div>
    <%- include("partials/footer") %>
</body>

</html>